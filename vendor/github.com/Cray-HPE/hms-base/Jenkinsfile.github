@Library('csm-shared-library') _

pipeline {
    agent {
        label "metal-gcp-builder"
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: "10"))
        timestamps()
    }

    environment {
        NAME = "hms-base"
        DESCRIPTION = "Cray Hardware Management System Base library"
        IS_STABLE = getBuildIsStable()
        VERSION = getDockerBuildVersion(isStable: env.IS_STABLE)
        DOCKER_ARGS = getDockerBuildArgs(name: env.NAME, description: env.DESCRIPTION)
    }

    stages {
        stage("Run Unit Tests") {
            steps {
                sh "make unittest"
            }
        }
        
        stage("Run Coverage Tests") {
            steps {
                sh "make coverage"
            }
        }
    }
}
